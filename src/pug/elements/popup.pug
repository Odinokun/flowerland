//begin popup
.popup__layer
.popup
  .popup__close
    +svg('close')
  .popup__header
    h2.popup__title Write Review
  .popup__body
    // begin schedule-item__form
    form.popup__form
      .popup__form-row
        input(name='name' placeholder='Your Name').popup__form-input.input
        input(name='email' placeholder='Email').popup__form-input.input
      .popup__form-row
        textarea(placeholder='Your review').popup__form-textarea.textarea
      .popup__form-row
        .popup__form-reset
          input(type='reset')
          +svg('reset')
          span clear
        .popup__form-submit.btn
          input(type='submit' value='send')
          +svg('arr-bottom')
    // begin schedule-item__form
//end popup