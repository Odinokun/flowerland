extends ../_template

mixin portfolio-slider__item(pic, title, subtitle)
  //begin portfolio-slider__item
  li.portfolio-slider__item
    a(href="#").portfolio-slider__link
      .portfolio-slider__link-circle
    .portfolio-slider__pic
      img(src="assets/img/portfolio-slide/portfolio-slide-" + pic + ".jpg" alt="portfolio")
      .portfolio-slider__text
        h3.portfolio-slider__title #{title}
        span.portfolio-slider__subtitle #{subtitle}
  //end portfolio-slider__item

